@model Employee

<div class="container mt-5">
    <div class="card shadow-sm col-md-6 mx-auto">
        <div class="card-body">
            <h4 class="mb-4 fw-bold">Create Employee</h4>

            <marquee class="mb-4 text-danger" behavior="scroll" direction="left" scrollamount="5">
                This is a demo application.
            </marquee>
            
            <form asp-controller="Employee" asp-action="Create" method="post">

                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label"></label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    Save Employee
                </button>

            </form>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}